<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:padding="20dp"
    android:weightSum="1"
    android:background="@color/darkblue">

    <ImageView
        android:id="@+id/storage_image"
        android:layout_width="150dp"
        android:layout_height="1500dp"
        app:srcCompat="@drawable/dbimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/storage_id" />

    <TextView
        android:id="@+id/storage_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/storage_image"
        android:layout_toEndOf="@+id/storage_image" />

    <TextView
        android:id="@+id/storage_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/storage_name"
        android:layout_alignStart="@+id/storage_name"
        android:layout_alignTop="@+id/storage_name"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:textColor="@color/fancyblue" />


</RelativeLayout>
